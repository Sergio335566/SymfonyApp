{% extends "base.html.twig" %}
{% block body %}

    <div>

        <a class="new-btn" href="{{ path('app_article_create') }}">Create</a>
        {% if app.user %}
            <a class='new-btn btn-info' href="{{ path('logout') }}">Logout</a>
        {% else %}
            <a class='new-btn btn-info' href="{{ path('login') }}">Login</a>
        {% endif %}
        <h1>
            LAST ARTICLES
        </h1>
        <hr>

            {% for article in article %}
                <div class="col-12 article-post">
                    <h2>{{ article.title }}</h2> <i> {{ article.createdAt|date('d/m/Y') }}</i>
                    <p>{{ article.content }}</p>
                    <i> created by {{ article.author.username }}</i>
                    {% if is_granted("ROLE_USER" and article.author == app.user) %}
                        <a class='btn btn-warning' href="{{ path('app_article_update', {article: article.id}) }}">Edit</a>
                        <a class='btn btn-danger' href="{{ path('app_article_delete', {article: article.id}) }}">Supprimer</a>
                    {% endif %}
                </div>
            {% endfor %}

    </div>
{% endblock body %}